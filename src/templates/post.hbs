<div class="tb-post-item">
  <a target="_blank" rel="noopener"  data-vars-outbound-link="{{ config.site.blog }}/\{{ slug }}" href="{{ config.site.blog }}/\{{ slug }}">
  <amp-img alt="\{{ title }}"
    src="{{ config.site.blog }}/\{{ feature_image }}"
    width="240"
    height="172"
    layout="responsive">
    <noscript>
      <img src="{{ config.site.blog }}/\{{ feature_image }}"
        alt="\{{ title }}"
        width="240" />
    </noscript>
  </amp-img>
  <h2>\{{ title }}</h2>
  <span class="tbp-datetime">\{{ created_at }}</span>
</div>
